<% content_for(:breadcrumb) do %>
  <li class="breadcrumb-item"><%=link_to "Dashboard", home_index_path %></li>
  <li class="breadcrumb-item"><%=link_to "Contacts", contacts_path %></li>
  <li class="breadcrumb-item active"><a href="javascript:void(0)"><%= @contact.first_name %> <%= @contact.last_name %></a></li>
<% end %>


<% content_for(:content) do %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Contact Information</h4>

        <%= render @contact %>
        
        <div>
          <%= link_to "Edit", edit_contact_path(@contact), class: 'btn btn-success' %>
          <%= link_to "Back", contacts_path, class: 'btn btn-primary' %>
          <%= button_to "Delete", @contact, class: 'btn btn-danger', method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>


<% end %>
