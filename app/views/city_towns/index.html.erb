<% content_for(:breadcrumb) do %>
  <li class="breadcrumb-item"><%=link_to "Dashboard", home_index_path %></li>
  <li class="breadcrumb-item active"><a href="javascript:void(0)">Cities</a></li>
<% end %>

<% content_for(:content) do %>

<div class="row">
  <div class="col-lg-12">
    <div class="card min-vh-100">
      <div class="card-body">
        <h1 class="card-title">Cities</h1>
          <%= link_to "New City", new_city_town_path, class: 'btn btn-success text-white' %>
          <table class="table table-sm">

            <thead>
              <th>#</th>
              <th>Name</th>
              <th>Description</th>
              <th>Action</th>
            <thead>

            <tbody>
                <% @city_towns.each_with_index do |city_town, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= city_town.name %></td>
                    <td><%= city_town.description %></td>
                    <td>
                      <%= link_to "View", city_town, class: 'btn btn-success text-white' %>
                      <%= link_to "Edit", edit_city_town_path(city_town), class: 'btn btn-primary' %>
                      <%#= link_to "Delete", city_town, class: 'btn btn-danger', method: :delete %>
                      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal<%= city_town.id %>">
                        Delete
                      </button>
                      <div>
                        <!-- Modal -->
                        <div class="modal fade" id="modal<%= city_town.id %>" tabindex="-1" role="dialog" aria-labelledby="modal<%= city_town.id %>Title" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Delete Confirmation</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                Are you sure you want to delete this city?(<strong><%= city_town.name %></strong>)
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn text-white btn-secondary" data-dismiss="modal">Close</button>
                                <%= link_to "Delete", city_town, class: 'btn btn-danger', method: :delete %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
            </tbody>  
          </table>
      </div>
    </div>
  </div>
</div>

<% end %>
