
<%= simple_form_for(@city_town) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :region, collection: Region.active_and_not_deleted.order(:name), prompt: "Choose a Region"%>
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success text-white" %>
  </div>
<% end %>
