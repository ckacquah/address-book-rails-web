
<%= simple_form_for(@city_town) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
   <%= f.input :region_code, collection: Region.where(active_status: true, del_status: false).order(:name), label_method: :name, value_method: :assigned_code, input_html:{id: "regions"} %>
    <%= f.input :assigned_code %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :del_status %>
    <%= f.input :active_status %>
   
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success text-white" %>
  </div>
<% end %>
