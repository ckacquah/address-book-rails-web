<% content_for(:breadcrumb) do %>
  <li class="breadcrumb-item"><%=link_to "Dashboard", home_index_path %></li>
  <li class="breadcrumb-item"><%=link_to "Cities", city_towns_path %></li>
  <li class="breadcrumb-item active"><a href="javascript:void(0)"><%= @city_town.name %></a></li>
<% end %>


<% content_for(:content) do %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">City Information</h4>

        <%= render @city_town %>
        
        <div>
          <%= link_to "Edit", edit_city_town_path(@city_town), class: 'btn btn-success' %>
          <%= link_to "Back", city_towns_path, class: 'btn btn-primary' %>
          <%= button_to "Delete", @city_town, class: 'btn btn-danger', method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
