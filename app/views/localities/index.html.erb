<% content_for(:breadcrumb) do %>
  <li class="breadcrumb-item"><%=link_to "Dashboard", home_index_path %></li>
  <li class="breadcrumb-item active"><a href="javascript:void(0)">Localities</a></li>
<% end %>

<% content_for(:content) do %>

<div class="row">
  <div class="col-lg-12">
    <div class="card min-vh-100">
      <div class="card-body">
        <div class="row justify-content-center">
          <div class="col-10 mt-4">
            <div class="row">
              <div class="col-6">
                <h1 class="card-title">Localities</h1>
              </div>
              <div class="col-6">
                <div class="row justify-content-end">
                  <div class="col-4">
                    <%= link_to "+ Add Locality", new_locality_path, class: 'btn btn-feature text-white mb-3' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-10">
        <table class="table mb-0 table-striped table-borderless">

          <thead class="bg-custom-dark text-white">
            <th>#</th>
            <th>Name</th>
            <th>Suburb</th>
            <th>Description</th>
            <th></th>
          <thead>

          <tbody>
              <% @localities.each_with_index do |locality, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= locality.name %></td>
                  <td><%= locality.suburb.name %></td>
                  <td><%= locality.description %></td>
                  <td>
                    <%= link_to "View", locality, class: 'mx-1 btn btn-feature text-white' %>
                    <%= link_to "Edit", edit_locality_path(locality), class: 'mx-1 btn btn-outline-edit' %>
                    <%#= link_to "Delete", locality, class: 'mx-1 btn btn-danger', method: :delete %>
                    <button type="button" class="mx-1 btn btn-danger" data-toggle="modal" data-target="#modal<%= locality.id %>">
                      Delete
                    </button>
                    <div>
                      <!-- Modal -->
                      <div class="modal fade" id="modal<%= locality.id %>" tabindex="-1" role="dialog" aria-labelledby="modal<%= locality.id %>Title" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLongTitle">Delete Confirmation</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              Are you sure you want to delete this locality?(<strong><%= locality.name %></strong>)
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-outline-edit" data-dismiss="modal">Cancel</button>
                              <%= link_to "Proceed", locality, class: 'btn btn-feature', method: :delete %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
          </tbody>  
        </table>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
