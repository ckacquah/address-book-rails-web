<% content_for(:breadcrumb) do %>
  <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
  <li class="breadcrumb-item"><a href="javascript:void(0)">Locality</a></li>
  <li class="breadcrumb-item active"><a href="javascript:void(0)"><%= @locality.name %></a></li>
<% end %>


<% content_for(:content) do %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">locality Information</h4>

        <%= render @locality %>
        
        <div>
          <%= link_to "Edit", edit_locality_path(@locality), class: 'btn btn-success' %>
          <%= link_to "Back", localities_path, class: 'btn btn-primary' %>
          <%= button_to "Delete", @locality, class: 'btn btn-danger', method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
