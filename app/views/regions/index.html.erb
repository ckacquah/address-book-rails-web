<% content_for(:breadcrumb) do %>
  <li class="breadcrumb-item"><%=link_to "Dashboard", home_index_path %></li>
  <li class="breadcrumb-item active"><a href="javascript:void(0)">Region</a></li>
<% end %>

<% content_for(:content) do %>

<div class="row">
  <div class="col-lg-12">
    <div class="card min-vh-100">
      <div class="card-body">
        <div class="row mt-5 justify-content-center">
          <div class="col-10">
            <div class="row">
              <div class="col-6">
                <h1 class="card-title">Regions</h1>
              </div>
              <div class="col-6">
                <div class="row justify-content-end">
                  <div class="col-4">
                    <%= link_to "+ Add Region", new_region_path, class: 'btn btn-feature text-white mb-3' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <div class="col-10">
          <table class="table mb-0 table-striped table-borderless">
            <thead class="bg-custom-dark text-white">
              <th>#</th>
              <th>Name</th>
              <th>Description</th>
              <th></th>
            <thead>
            <tbody>
                <% @regions.each_with_index do |region, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= region.name %></td>
                    <td><%= region.description %></td>
                    <td>
                      <%= link_to "View", region, class: 'mx-1 btn btn-feature text-white' %>
                      <%= link_to "Edit", edit_region_path(region), class: 'mx-1 btn btn-outline-edit' %>
                      <%#= link_to "Delete", region, class: 'mx-1 btn btn-danger', method: :delete %>
                      <button type="button" class="mx-1 btn btn-danger" data-toggle="modal" data-target="#modal<%= region.id %>">
                        Delete
                      </button>
                      <div>
                        <!-- Modal -->
                        <div class="modal fade" id="modal<%= region.id %>" tabindex="-1" role="dialog" aria-labelledby="modal<%= region.id %>Title" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Delete Confirmation</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                Are you sure you want to delete this region?(<strong><%= region.name %></strong>)
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-outline-edit" data-dismiss="modal">Cancel</button>
                                <%= link_to "Proceed", region, class: 'btn btn-feature', method: :delete %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
            </tbody>  
          </table>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
