<% content_for(:breadcrumb) do %>
  <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
  <li class="breadcrumb-item"><a href="javascript:void(0)">Region</a></li>
  <li class="breadcrumb-item active"><a href="javascript:void(0)"><%= @region.name %></a></li>
<% end %>


<% content_for(:content) do %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Region Information</h4>

        <%= render @region %>
        
        <div>
          <%= link_to "Edit", edit_region_path(@region), class: 'btn btn-success' %>
          <%= link_to "Back", regions_path, class: 'btn btn-primary' %>
          <%= button_to "Delete", @region, class: 'btn btn-danger', method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>


<% end %>
